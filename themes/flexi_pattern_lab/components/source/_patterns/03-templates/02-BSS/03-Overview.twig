{% extends "organisms-dashboard-container" %}

{% block dashboardContent %}

<h2 class="text-center mb-5">Hello, John</h2>

<div class="card p-4 mb-5">
  {% include 'organisms-usage-gauge-dash-warning' %}
</div>

<div class="row">
  <div class="col-lg-8 col-sm-12 d-flex">
    {% include 'organisms-loyaltyLevelFull' %}
  </div>
  
  <div class="col-lg-4 col-sm-12 d-flex">
    <div class="card card-normal p-4 mb-5 w-100">
      <h4 class="text-center">Plans</h4>
      {% include 'molecule-small-spot' %}
