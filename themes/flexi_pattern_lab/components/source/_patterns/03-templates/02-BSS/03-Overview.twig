        {% include 'atoms-button' with { buttonLabel: 'Add a plan', buttonColor: 'green' } %}
      </div>
    </div>
  </div>
  
</div>

<div class="row">
  <div class="col-lg-8 col-sm-12">
    <div class="card card-normal p-4 mb-5">
      
      <div class="d-flex row align-items-center">
        <div class="col-12 col-md">
          <img src="/images/sample/hero-square-banana.png" class="img-fluid mx-auto mb-3 mb-md-0">
        </div>
      
        <div class="col-12 col-md text-center">
          <h5>Refer a friend and earn <span class="text-green">$25</span>!</h5>
          <p class="text-muted">Suspendisse lorem ipsum auctor totoro magic bus. Suspendisse lorem ipsum.</p>
          {% include 'atoms-button' with { buttonLabel: 'Refer a friend', buttonColor: 'green' } %}
        </div>
      </div>
      
    </div>
  </div>
</div>
{% endblock %}