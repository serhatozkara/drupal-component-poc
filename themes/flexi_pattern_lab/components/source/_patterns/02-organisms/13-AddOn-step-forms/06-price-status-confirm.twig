<div class="fixed-bottom price-status {{ show|default('')}}">
  <div class="container py-3">
    
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">

        <div class="d-flex justify-content-between align-items-center pb-md-2">
          <h3 class="price-status-total">{{ type|default('My Add-ons') }}</h3>
          <h2 class="price-status-value"><span class="dollar-sign align-middle">$</span>{{ price|default('10.00') }}<span class="per-month">{{ occurance|default('per month') }}</span></h2>
        </div>

        <div class="d-flex align-items-center justify-content-between">

          <div class="d-flex pt-md-3">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="customCheck1">
              <label class="custom-control-label" for="customCheck1">I accept the <a href="#">terms and conditions</a>.</label>
            </div>
          </div>
          <div class="d-md-flex">
            <div class="d-flex pt-md-3 pl-md-4">
              {% include 'atoms-button-large' with { buttonLabel: 'Confirm Order' } %}
            </div>
            <div class="d-flex pt-md-3 pl-md-4 justify-content-center">
              {% include 'atoms-button' with { buttonColor:'white btn-outline-dark', buttonLabel: 'Cancel' } %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>