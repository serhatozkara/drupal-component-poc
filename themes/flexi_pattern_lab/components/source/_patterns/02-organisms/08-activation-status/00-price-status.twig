<div class="fixed-bottom price-status {{ show|default('')}}">
  <div class="container py-3">
    
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
    
        <div class="d-flex justify-content-between align-items-center pb-md-2">
          <h3 class="price-status-total">Total</h3>
          <h2 class="price-status-value"><span class="dollar-sign align-middle">$</span>69<span class="per-month">per month</span></h2>
        </div>
    
        <div class="d-flex price-status-terms align-items-center justify-content-between">
          <div class="d-flex pt-3">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="customCheck1">
              <label class="custom-control-label" for="customCheck1">I accept the <a href="#">terms and conditions</a>.</label>
            </div>
          </div>
    
          <div class="d-flex pt-3">
            {% include 'atoms-button-large' with { buttonLabel: 'Submit' } %}
          </div>
        </div>
    
      </div>
    </div>
    
  </div>
</div>    
        