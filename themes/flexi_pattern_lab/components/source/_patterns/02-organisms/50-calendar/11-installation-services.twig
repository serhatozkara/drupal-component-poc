        <h3 class="text-center text-vibrant-blue"><span class="small">$</span>XX</h3>
      </div>
      <div class="text-center">
        {% include 'atoms-button-icon-right-large' with { buttonLabel: 'Validate', icon: 'arrow-right', uniqueID: uuid } %}
