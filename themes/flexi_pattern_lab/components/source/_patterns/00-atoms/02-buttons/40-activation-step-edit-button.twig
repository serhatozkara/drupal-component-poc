<button type="button" class="btn btn-form-collapse w-100 mt-3" data-toggle="collapse" data-target=".activation-collapse-{{ uniqueID|default('uniqueID') }}" aria-expanded="false" {{ disabled }}>
  <div class="d-flex justify-content-between align-items-center">
    <div class="btn-form-collapse-label text-truncate btn-form-collapse-label-{{ stepValueLabelStyle|default('large') }}">
      {{ stepValueLabel|default(558214)|raw }}
    </div>
    <div class="btn-form-collapse-edit">
      {% include 'atoms-icon-32' with { color: 'light-gray', icon: 'edit-2'} %}
      <span class="text-uppercase d-block">Change</span>
    </div>
  </div>
</button>