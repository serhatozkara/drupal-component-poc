    <div class="modal-content login-modal">

        <div class="modal-header mb-20">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><svg class="fi fi-24 fi-gray"><use xlink:href="/images/icons/feather-sprite.svg#x" href="/images/icons/feather-sprite.svg#x"></use></svg></button>
        </div>

        <div class="modal-body p-0 mx-30 mx-md-75 mb-20">
            <h6 class="mb-15 mb-md-20 fs-22">Login</h6>

            {% include 'atoms-error-message' %}

            <div class="floating-label-group floating-label-control">
                <input type="email" class="floating-label-input form-control h-60" required/>
                <label class="floating-label d-flex">
                    <span class="hide-icon p-0 mr-2"><svg class="fi fi-16 fi-"><use xlink:href="/images/icons/feather-sprite.svg#mail" href="/images/icons/feather-sprite.svg#mail"></use></svg></span> Email
                </label>
            </div>

            <div class="floating-label-group floating-label-control mt-md-30 mt-15 mb-15">
                <input type="password" class="floating-label-input form-control is-invalid h-60" required/>
                <label class="floating-label d-flex">
                    <span class="hide-icon p-0 mr-2"><svg class="fi fi-16 fi-"><use xlink:href="/images/icons/feather-sprite.svg#mail" href="/images/icons/feather-sprite.svg#mail"></use></svg></span> Password
                </label>
                <div class="invalid-feedback">Sample error message</div>
                <label class="label-right forgot-label-right"><a href="#" class="">Forgot</a></label>
            </div>

            <button type="button" class="btn btn-primary btn-block btn-lg btn-height-55 mb-0">Log In</button>

            <div class="container my-20">
                <div class="row justify-content-center">
                <div class="col text-laurel d-sm-block"></div>
                <div>
                    <p class="text-muted text-uppercase px-3 py-2 d-block">
